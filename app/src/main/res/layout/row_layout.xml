<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_transparent_selector"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/restaurant_image"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/restaurant_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/restaurant_image"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:text="Jack's Deli "
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <TextView
        android:id="@+id/display_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/restaurant_title"
        android:layout_below="@id/restaurant_title"
        android:layout_marginTop="3dp"
        android:fontFamily="sans-serif-light"
        android:text="9096455557 "
        android:textSize="12sp" />

    <TextView
        android:id="@+id/rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/display_phone"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/restaurant_image"
        android:drawableLeft="@drawable/ic_star"
        android:fontFamily="sans-serif-regular"
        android:gravity="center_vertical"
        android:text="6.5/10" />


</RelativeLayout>